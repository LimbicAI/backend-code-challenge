{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/src/**/*.test.ts", "<rootDir>/src/test/*.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "<rootDir>/src/test/helpers.ts"],
  "globals": {
    "ts-jest": {
      "diagnostics": {
        "ignoreCodes": ["TS151001"]
      }
    }
  }
}
